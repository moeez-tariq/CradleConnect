<main>
    <section class="goals-section section-padding" id="section_goals">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="mb-4">Goals</h2>
                </div>

                <div class="clearfix"></div>

                <div class="col-lg-5 col-12">
                    <img src = "images/goals.webp" class="img-fluid" alt="goals">
                </div>

                <div class="col-lg-6 col-12 m-auto">
                    <!-- Form to add new goal -->
                    <form method="POST" action="/goals" id="addGoalForm">
                        <div class="mb-3">
                            <label for="goalContent" class="form-label">Goal</label>
                            <input type="text" class="form-control" id="goalContent" name="goalContent" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Goal</button>
                    </form>

                    <!-- Checklist for goals -->
                    <div class="mt-4">
                        <h4>My Goals</h4>
                        <div class="list-group" id="goalList">
                            {{#each userGoals}}
                                <div> <input type="checkbox" {{#if this.completed}}checked{{/if}}>     {{this.content}}</div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
