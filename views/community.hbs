<section class="hero-section hero-section2 d-flex justify-content-center align-items-center" id="section_1">
<div class="container">
    <div class="row">
        <div class="col-md-8 post-box">
            <div class="col-12 text-center">
                <h2 class="mb-4">Community Forum</h1>
                <a href="/addPost" class="btn custom-btn custom-btn2 mt-3 mt-lg-4">+ Add New Post</a>
            </div>
            
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

            <div class="col-lg-8 col-12 mt-3 mx-auto">
                {{#if allPosts.length}}
                    {{#each allPosts}}
                        <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
                            <div class="d-flex">
                                <div class="custom-block-topics-listing-info d-flex">
                                    <div>
                                        <h5 class="mb-2"> {{this.content}} <br/>
                                        {{formatDate this.date}} <br/>
                                        {{this.user.name}}
                                        {{this._id}}</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                            <!-- Comments -->
                        <div class="commentsContainer" id="commentsContainer" style="background-color: white">
                        {{#each this.replies}}
                                <p>{{this.userName}}:  {{this.content}}</p>
                        {{/each}}
                        <form id="commentForm" data-post-id="{{this._id}}">
                            <input type="text" id="commentInput" name="comment" placeholder="Add a comment">
                            <button type="submit">Submit</button>
                        </form>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="custom-block custom-block-topics-listing bg-white shadow-lg mb-5">
                            <div class="d-flex">
                                <img src="images/topics/undraw_Remote_design_team_re_urdx.png" class="custom-block-image img-fluid" alt="">

                                <div class="custom-block-topics-listing-info d-flex">
                                    <div>
                                        <h5 class="mb-2">No Entries Found</h5>

                                        <p class="mb-0">You still haven't added anything to your diary yet. Click on the button above to start your journaling journey.</p>
                                        </p>

                                    </div>
                                </div>
                            </div>
                    </div>
                {{/if}}
            </div> 
              
            </div>
