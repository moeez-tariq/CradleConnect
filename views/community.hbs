 <!-- JavaScript to handle form submission and AJAX request -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function() {
    $('.commentForm').submit(function(event) {
        event.preventDefault(); // Prevent default form submission

        // Get comment content from input field
        var commentContent = $(this).find('.commentInput').val();
        var postId = $(this).data('post-id');

        // Send AJAX request to server to submit comment
        $.ajax({
            url: '/submitComment',
            method: 'POST',
            data: { comment: commentContent, postId: postId },
            success: function(response) {
                // Upon successful submission, append the new comment to the UI
                var newComment = '<div class="comment">' + response.userName + ": " + response.comment + '</div>';
                $('#commentsContainer-' + postId).append(newComment);
            },
            error: function(xhr, status, error) {
                console.error('Error submitting comment:', error);
            }
        });
    });

    // Function to sort posts by date
    function sortPosts(order) {
        const url = `/community?sortBy=${order}`;
        console.log(url);
        window.location.href = url;
    }

    // Function to search posts by title or content
    function searchPosts() {
        const searchTerm = document.getElementById('searchInput').value;
        const url = `/community?search=${searchTerm}`;
        window.location.href = url;
    }

    // Initially hide comments beyond the first 5
    $('.comment').slice(5).hide();

    // Event listener for toggle button
    $('#toggleCommentsBtn').click(function() {
        $('.comment').slice(5).toggle();
        $(this).text(function(i, text) {
            return text === "Show More" ? "Show Less" : "Show More";
        });
    });

    // Event listener for delete buttons
     $('.deleteBtn').click(function() {
        var commentId = $(this).data('comment-id');
        var postId = $(this).closest('.commentsContainer').data('post-id');

        // Send AJAX request to server to delete the comment
        $.ajax({
            url: '/deleteComment',
            method: 'DELETE',
            data: { postId: postId, commentId: commentId },
            success: function(response) {
                // Remove the deleted comment from the UI
                $(this).closest('.comment').remove();
            },
            error: function(xhr, status, error) {
                console.error('Error deleting comment:', error);
            }
        });
    }); 

});

</script>
