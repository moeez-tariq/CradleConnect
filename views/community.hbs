 <!-- JavaScript to handle form submission and AJAX request -->
<script>
    $(document).ready(function() {
        $('#commentForm').submit(function(event) {
            event.preventDefault(); // Prevent default form submission

            // Get comment content from input field
            var commentContent = $('#commentInput').val();
            var postId = $(this).data('post-id');
            // Send AJAX request to server to submit comment
            $.ajax({
                url: '/submitComment',
                method: 'POST',
                data: { comment: commentContent, postId:postId },
                success: function(response) {
                    // Upon successful submission, append the new comment to the UI
                    var newComment = '<div class="comment">' + response.userName + ": " + response.comment + '</div>';
                    $('#commentsContainer').append(newComment);
                },
                error: function(xhr, status, error) {
                    console.error('Error submitting comment:', error);
                }
            });
        });
    });
</script>
